{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"./dist",
			"node_modules/**",
			"build/**",
			".next/**",
			".vercel/**",
			".wrangler/**",
			"cloudflare/frontend/.next/**",
			"cloudflare/frontend/.vercel/**",
			"cloudflare/frontend/.open-next/**",
			"cloudflare/.wrangler/**",
			"cloudflare/.cloudflare/**",
			".vscode/**",
			".claude/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
